<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 <title>The Mendicant Bug</title>
 <link href="http://mendicantbug.com/atom.xml" rel="self"/>
 <link href="http://mendicantbug.com"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://mendicantbug.com/</id>
 <author>
   <name>Jason Adams</name>
   <email>jasonmadams@gmail.com</email>
 </author>
 {% for post in site.posts %}<entry>
   <title>{{ post.title }}</title>
   <link href="http://mendicantbug.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://mendicantbug.com{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>{% endfor %}
</feed>